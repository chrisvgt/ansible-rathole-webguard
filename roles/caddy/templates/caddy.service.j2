# roles/caddy/templates/caddy.service.j2

[Unit]
Description=Caddy HTTP/2 web server
Documentation=https://caddyserver.com/docs/
After=network.target network-online.target crowdsec.service
Requires=network-online.target

[Service]
User={{ caddy_user }}
Group={{ caddy_group }}
ExecStart={{ caddy_install_path }} run --environ --config {{ caddy_config_file }} --adapter caddyfile
ExecReload={{ caddy_install_path }} reload --config {{ caddy_config_file }} --force --adapter caddyfile
TimeoutStopSec=5s
LimitNOFILE=1048576
LimitNPROC=512
PrivateTmp=true
ProtectSystem=full
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target